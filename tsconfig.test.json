{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "checkJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "setupTests.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
